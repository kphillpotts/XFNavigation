<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="XFNavigation.Views.PushPop.MyPage"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ContentPage.ToolbarItems>
        <ToolbarItem Name="Modal"
                     x:Name="PopModalToolbarButton"
                     Clicked="PushModalToolbarButton_OnClicked"
                     Order="Primary"
                     Priority="0" />
    </ContentPage.ToolbarItems>

    <StackLayout Orientation="Vertical"
                 Padding="10"
                 Spacing="10"
                 VerticalOptions="Center">
        <Button x:Name="PushPageButton"
                Clicked="PushPageButton_OnClicked"
                Text="Push" />
        <Button x:Name="PopPageButton"
                Clicked="PopPageButton_OnClicked"
                Text="Pop" />
        <Button x:Name="PopToRootButton"
                Clicked="PopToRootButton_OnClicked"
                Text="Pop To Root" />
    </StackLayout>

</ContentPage>